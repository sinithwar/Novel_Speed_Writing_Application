<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="tommymertell.novelspeedwriting.LandingPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/paper"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/book"
            android:orientation="horizontal"
    >
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/about_back"
                android:src="@drawable/back"
        />
        <TextView
                android:text="@string/chapter_summaries"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
        />
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:text="@string/chapter_summaries_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_start_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_end_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_continuation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_continuation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_sub_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_result_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
            />
            <TextView
                    android:text="@string/chapter_sum_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:textStyle="italic"/>
            <TextView
                    android:text="@string/chapter_sum_result_wait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="@string/chapter_sum_result_wait_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:textStyle="italic"/>
            <TextView
                    android:text="@string/chapter_sum_not_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="10dp"/>
        </LinearLayout>
    </ScrollView>
    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:name="tommymertell.novelspeedwriting.AdFragment"
              android:id="@+id/fragment"
    />
</LinearLayout>