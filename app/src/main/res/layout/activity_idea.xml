<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="tommymertell.novelspeedwriting.LandingPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/paper"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/book"
            android:orientation="horizontal"
    >
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/about_back"
                android:src="@drawable/back"
        />
        <TextView
                android:text="@string/the_idea"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
        />
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <TextView
                    android:text="@string/the_idea_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
            <TextView
                    android:text="@string/the_idea_bold_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" android:textSize="20sp" android:gravity="center" android:padding="10dp"/>
            <TextView
                    android:text="@string/the_idea_protagonist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" android:paddingBottom="10dp"/>
            <TextView
                    android:text="@string/the_idea_protagonist_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
            <TextView
                    android:text="@string/the_idea_antagonist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" android:paddingBottom="10dp"/>
            <TextView
                    android:text="@string/the_idea_antagonist_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
            <TextView
                    android:text="@string/the_idea_settting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" android:paddingBottom="10dp"/>
            <TextView
                    android:text="@string/the_idea_settting_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
            <TextView
                    android:text="@string/the_idea_conflict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" android:paddingBottom="10dp"/>
            <TextView
                    android:text="@string/the_idea_conflict_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
            <TextView
                    android:text="@string/the_idea_final_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" android:padding="10dp" android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
