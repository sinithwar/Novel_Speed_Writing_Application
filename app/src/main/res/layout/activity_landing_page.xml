<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        tools:context="tommymertell.novelspeedwriting.LandingPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
>
    <TextView
            android:text="@string/app_title"
            android:background="@drawable/book"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
    />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

        >
            <TextView
                    android:text="@string/about_title"
                    android:background="@drawable/book"
                    android:textColor="@android:color/white"
                    android:id="@+id/about_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"/>
            <TextView
                    android:text="@string/the_idea"
                    android:background="@drawable/book"
                    android:textColor="@android:color/white"
                    android:id="@+id/the_idea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"/>
            <TextView
                    android:text="@string/description_page"
                    android:background="@drawable/book"
                    android:textColor="@android:color/white"
                    android:id="@+id/description_page"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"/>
            <TextView
                    android:text="@string/page_summary"
                    android:background="@drawable/book"
                    android:textColor="@android:color/white"
                    android:id="@+id/page_summary"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"/>
            <TextView
                    android:text="@string/chapter_summaries"
                    android:background="@drawable/book"
                    android:textColor="@android:color/white"
                    android:id="@+id/chapter_summaries"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"/>

            <TextView
                    android:text="@string/word_count"
                    android:background="@drawable/book"
                    android:textColor="@android:color/white"
                    android:id="@+id/word_count"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"/>
        </LinearLayout>

    </ScrollView>

    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:name="tommymertell.novelspeedwriting.AdFragment"
              android:id="@+id/fragment"
              />
</LinearLayout>