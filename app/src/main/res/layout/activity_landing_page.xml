<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        tools:context="tommymertell.novelspeedwriting.LandingPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
>
    <TextView
            android:text="@string/app_title"
            android:background="@drawable/book"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:id="@+id/tutorials"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:orientation="vertical"
        >
            <TextView
                    android:text="@string/tutorial_title"
                    android:textSize="25sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="75dp"
                    android:src="@drawable/reading_book"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/news"
        >
            <TextView
                    android:text="@string/news"
                    android:textSize="25sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="75dp"
                    android:src="@drawable/news"
                    android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <fragment android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:name="tommymertell.novelspeedwriting.AdFragment"
              android:id="@+id/fragment"
              tools:layout="@layout/ad_fragment"/>
</LinearLayout>